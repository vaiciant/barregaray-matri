{% extends 'base.html.twig' %}

{% block title %}Inicia sesión{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            {% if error %}
                <div class="alert alert-danger mt-2">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if app.user %}
                <div class="mt-2">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card form-container p-4 mt-5">
                <form method="post">
                    <h1 class="h2 mb-3 font-weight-normal text-center">Inicia sesión</h1>
                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    <label for="password">Contraseña</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <div class="mt-2">
                        <div class="d-grid gap-2">
                            <button class="btn btn-lg btn-primary" type="submit">
                                Ingresar credenciales {{ ux_icon('majesticons:login-half-circle-line', {height: '16px', width: '16px', 'aria-hidden': true}) }}
                            </button>
                        </div>
                    </div>
                </form>
                <div class="mt-2 text-center">
                    <a class="btn btn-link" href="{{ path('app_olvido_cotrasena') }}">¿Olvidaste tu contraseña?</a>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}
