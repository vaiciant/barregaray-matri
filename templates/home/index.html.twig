                                <label for="nombre_completo_acompanante" class="form-label">Nombre Completo Acompañante</label>
                                <input type="text" id="nombre_completo_acompanante" name="nombre_completo_acompanante" class="form-control" placeholder="Ingresa nombre de acompañante">
                            </div>
                            <div class="mb-1">
                                <label for="alergias_acompanante" class="form-label">Alergias y/o restricción alimentaria Acompañante</label>
                                <textarea id="alergias_acompanante" name="alergias_acompanante" class="form-control" placeholder=""></textarea>
                            </div>
                        </div>
                        <div class="mb-1">
                            <label for="mesa" class="form-label">¿Con quien te quisieras sentar o cual es tu circulo social?</label>
                            <textarea id="mesa" name="mesa" class="form-control" placeholder=""></textarea>
                        </div>
                        <div class="mt-5">
                            <button type="submit" class="btn btn-outline-success btn-submit w-100" id="btn_confirmar_asistencia">
                                Confirmar Asistencia {{ ux_icon('ph:check-circle', {height: '16px', width: '16px', 'aria-hidden': true}) }}
                            </button>
                        </div>
                    </form>
                    <div id="loading_confirmacion" class="text-center" style="display: none;">
                        {{ ux_icon('fa6-solid:spinner', {height: '32px', width: '32px', 'class': 'fa-pulse'}) }}
                    </div>
