    <div class="col-12 text-center">
        <h5>Ó</h5>
    </div>
    <div class="col-12 text-center">
        <a class="btn btn-success" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#transferencia_modal">
            {{ ux_icon('ph:credit-card', {height: '16px', width: '16px', 'aria-hidden': true}) }} Transferencia {{ ux_icon('ph:credit-card', {height: '16px', width: '16px', 'aria-hidden': true}) }}
