                        <div class="text-center ms-0 me-0">
                            <a target="_blank" href="https://maps.app.goo.gl/xmoLY2t4FXoj4CLM6">
                                <img class="" style="width: 100%;" src="{{ asset('images/mapa_casona.png') }}" alt="Catalina Etchegaray Molina y Vicente Barrenechea Reginato">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-1">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="module">
        $( document ).ready(function() {
            const collapse_acompanante_ele = document.getElementById('collapse_acompanante')
            var collapse_acompanante = new bootstrap.Collapse(
                collapse_acompanante_ele, {
                    toggle: false
            });

            var checkbox = document.getElementById('switch_acompanante')

            checkbox.addEventListener('change', function () {
                checker(this.checked)
            })

            function checker(checked) {
                var nombre_completo_acompanante = $("#nombre_completo_acompanante");
                collapse_acompanante.toggle();
                nombre_completo_acompanante.prop('required', checked);
            }

            $(document).find("#form_modificacion").on( "submit", function(e) {
                e.preventDefault();
                let url = $(this).attr('action');
                let data = $(this).serialize();
                var btn_confirmar_mod = $("#btn_confirmar_mod");
                var btn_texto_mod = $("#modificacion");
                var btn_cerrar_mod = $("#btn_cerrar_mod");
                btn_confirmar_mod.attr('disabled', 'disabled');
                btn_confirmar_mod.html('Guardando {{ ux_icon('fa6-solid:spinner', {height: '16px', width: '16px', 'class': 'fa-pulse'}) }}');
                $.ajax({
                    url: url,
                    data: data,
                    type: 'POST',
                    cache: false,
                    success: function (resp) {
                        setTimeout(function() {
                            btn_cerrar_mod.click();
                            setTimeout(function() {
                                btn_texto_mod.val('');
                                btn_confirmar_mod.prop('disabled', false);
                                btn_confirmar_mod.html('Pedir cambios {{ ux_icon('ph:list-star', {height: '16px', width: '16px', 'aria-hidden': true}) }}');
                            }, 100);
                        }, 500);
                    },
                    error: function (xhr, status) {
                        console.error('Error al guardar cambios');
                    },
                });
            });

            $(document).find("#form_asistencia").on( "submit", function(e) {
                e.preventDefault();
                var btn_confirmar_asistencia = $("#btn_confirmar_asistencia");
                btn_confirmar_asistencia.attr('disabled', 'disabled');
                btn_confirmar_asistencia.html('Guardando {{ ux_icon('fa6-solid:spinner', {height: '16px', width: '16px', 'class': 'fa-pulse'}) }}');
                var loading_confirmacion = $("#loading_confirmacion");
                var mensaje_confirmacion = $("#mensaje_confirmacion");
                loading_confirmacion.show();
                $(this).hide();
                let url = $(this).attr('action');
                let data = $(this).serialize();
                $.ajax({
                    url: url,
                    data: data,
                    type: 'POST',
                    cache: false,
                    success: function (resp) {
                        if (resp.status) {
                            var row_btn_confirmar_asistencia = $("#row_btn_confirmar_asistencia");
                            row_btn_confirmar_asistencia.hide();
                            setTimeout(function() {
                                loading_confirmacion.hide();
                                mensaje_confirmacion.show();
                                var pass_usuario = $("#pass_usuario");
                                pass_usuario.html('Esta es tu contraseña temporal: '+resp.pass);
                            }, 500);
                        }
                    },
                    error: function (xhr, status) {
                        console.error('Error al guardar confirmación');
                    },
                });
            });
        });
    </script>
{% endblock %}
